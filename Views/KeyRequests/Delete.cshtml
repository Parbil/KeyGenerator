@model BitproKeyGen.Models.KeyRequest

@{
    ViewData["Title"] = "Delete";
}

    <h3>Are you sure you want to delete this?</h3>
  
<div>

    <hr />
    <div class="col-md-offset-4">
        <dl class="dl-horizontal">
            <dt>
                Shop Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ShopName)
            </dd>
            <dt>
                Contact No
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ShopContactNo)
            </dd>
            <dt>
                Product Key
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ProductKey)
            </dd>
            <dt>
                Duration
            </dt>
            <dd>
                @*@Html.DisplayFor(model => model.Duration)*@
                @if (Model.Duration == 730)
                {
                    @("2 Year");
                }
                else if (Model.Duration == 365)
                {
                    @("1 Year");
                }
                else if (Model.Duration == 183)
                {
                    @("6 Month");
                }
                else
                {
                    @("Trial");
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger col-sm-offset-2" />

        </form>
    </div>
    </div>
